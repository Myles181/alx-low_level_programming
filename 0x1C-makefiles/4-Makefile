CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ) $(SRC)
	$(CC) $(CFALGS)   -c -o $(word 1, $OBJ) $(word 1, $(SRC))
	$(CC) $(CFALGS)   -c -o $(word 2, $OBJ) $(word 2, $(SRC))
	$(CC) $(CFALGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	clean oclean

re:
	fclean all
